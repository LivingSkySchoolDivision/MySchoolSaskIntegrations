    NOTES:
    Clevr expects the school "type" to be a 1 or a 2, but that's not possible with this file alone.
    Either comment it out below, replacing it with the "blank" line directly above it, or use a 
    script to conver the string value to a 1 or 2.
-->
<export table-id="tblCrsSchool " header-row="true" value-delimiter="|" value-wrapper="">
    <!-- Only include actual classes (that aren't for attendance, etc) -->    
    <filter field="relCskCrsOid.crsCourseNum" operator="notEqual" value="ATT-AM" connector="and" />
    <filter field="relCskCrsOid.crsCourseNum" operator="notEqual" value="ATT-PM" connector="and" />
    <filter field="relCskCrsOid.crsCourseNum" operator="notEqual" value="FASA" connector="and" />

    <!-- Sort by course code-->
    <sort field="relCskCrsOid.crsCourseNum" direction="asc" />

    <field id="relCskSklOid.sklSchoolID" header-source="constant" header-value="SchoolCode" />
    <field id="relCskCrsOid.crsCourseNum" header-source="constant" header-value="CourseCode" />
    <field id="relCskCrsOid.crsCourseDesc" header-source="constant" header-value="CourseName" />
    <field id="relCskCrsOid.crsCredit" header-source="constant" header-value="CreditValue" />
    <field id="cskGradeLevel" header-source="constant" header-value="GradeLower" />
    <field id="cskGradeLevel" header-source="constant" header-value="GradeUpper" />    
</export>

