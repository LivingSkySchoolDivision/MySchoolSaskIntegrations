<export table-id="tblStudent" header-row="true">

  <!-- Only export active or prereg students -->
  <filter field="stdEnrStatus" operator="equals" value="Active" />
  <filter field="stdEnrStatus" operator="equals" value="Active No Primary" connector="or" />

  <!-- Sort schools together for easier processing -->
  <sort field="relStfSklOid.sklSchoolName" direction="asc" />
  <sort field="relStfPsnOid.psnNameLast" direction="asc" />
  <sort field="relStfPsnOid.psnNameFirst" direction="asc" />


  <field id="relStdPsnOid.relPsnAdrPhys.adrCity" header-source="constant" header-value="City" />
  <field id="relStdPsnOid.psnEmail01" header-source="constant" header-value="Email" />
  <field id="stdGradeLevel" header-source="constant" header-value="Grade" find="^0" replaceAll="" />
  <field id="relStdPsnOid.psnPhone01" header-source="constant" header-value="Phone" />
  <field id="relStdPsnOid.relPsnAdrPhys.adrState" header-source="constant" header-value="State" />
  <field id="relStdPsnOid.relPsnAdrPhys.adrAddress01" header-source="constant" header-value="Street" />
  <field id="relStdPsnOid.psnFieldC003" header-source="constant" header-value="LastName" /> <!-- Preferred last name -->
  <field id="relStdSklOid.sklSchoolID" header-source="constant" header-value="SchoolId" />
  <field id="relStdPsnOid.psnFieldC001" header-source="constant" header-value="FirstName" /> <!-- Preferred first name -->
  <constant value="" header-source="constant" header-value="PhoneType" />
  <field id="relStdPsnOid.psnDob" format="MM/dd/YYYY" header-source="constant" header-value="DateOfBirth" />
  <field id="stdIDLocal" header-source="constant" header-value="StudentNumber" />
  <field id="stdIDLocal" header-source="constant" header-value="StudentRegionId" />
</export>