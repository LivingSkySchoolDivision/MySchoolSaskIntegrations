<export table-id="tblStdContact" header-row="true">
  <!-- Only export contacts that live with the student -->
  <!-- <filter field="ctjLivesWith" operator="equals" value="1" /> -->
  <!-- Only export contacts with portal access -->
  <filter field="ctjPortalAcs" operator="equals" value="1" />
  <field id="relCtjCntOid.relCntPsnOid.psnEmail01" header-source="constant" header-value="Email" />
  <field id="relCtjCntOid.ctjOID" header-source="constant" header-value="ExtId" />  
  <field id="relCtjCntOid.relCntPsnOid.psnPhone01" header-source="constant" header-value="Phone" />
  <field id="relCtjCntOid.cntViewName" header-source="constant" header-value="FullName" />
  <constant value="primary" header-source="constant" header-value="PhoneType" />
  <field id="ctjRelateCode" header-source="constant" header-value="Relationship" />
  <field id="relCtjStdOid.stdIDLocal" header-source="constant" header-value="StudentNumber" />
</export>
