    ***** NOTE *****
    This export will pull the top 2 contacts, regardless of who they are or if they should get notifications for the student.

    Consider using a different method to export this data, such as the MSS Reporting Database, where you can
    target contacts based on values like "lives with", "receives email", etc.

-->
<export table-id="tblStdContact" header-row="true">
  <!-- Only export contacts with portal access set to yes -->
  <filter field="ctjPortalAcs" operator="equals" value="1" />

  <field id="relCtjStdOid.stdOID" header-source="constant" header-value="StudentOID" />  
  <field id="relCtjStdOid.stdIDLocal" header-source="constant" header-value="StudentPupilNo" />  
  <field id="relCtjCntOid.ctjOID" header-source="constant" header-value="ContactID" />  
  
  <field id="ctjEmergncyPri" header-source="constant" header-value="Priority" />
  <field id="ctjRelateCode" header-source="constant" header-value="Relation" />

  <field id="relCtjCntOid.relCntPsnOid.psnNameFirst" header-source="constant" header-value="FirstName" />
  <field id="relCtjCntOid.relCntPsnOid.psnNameLast" header-source="constant" header-value="LastName" />
  <field id="relCtjCntOid.relCntPsnOid.psnPhone01" header-source="constant" header-value="Phone1" />
  <field id="relCtjCntOid.relCntPsnOid.psnPhone02" header-source="constant" header-value="Phone2" />
  <field id="relCtjCntOid.relCntPsnOid.psnPhone03" header-source="constant" header-value="Phone3" />
  <field id="relCtjCntOid.relCntPsnOid.psnEmail01" header-source="constant" header-value="Email" />
  <field id="ctjRecEmail" header-source="constant" header-value="ReceivesEmail" />
  <field id="ctjPortalAcs" header-source="constant" header-value="PortalAccess" />
  <field id="ctjLivesWith" header-source="constant" header-value="LivesWithStudent" />

</export>

